{
    "name": "monachilada/craft-matrixtoolbar",
    "description": "Expand, Collapse and modify the status of multiple blocks in a Matrix field simultaneously.",
    "type": "craft-plugin",
    "version": "1.0.2",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "matrix toolbar"
    ],
    "support": {
        "docs": "https://github.com/monachilada/craft-matrixtoolbar/blob/master/README.md",
        "issues": "https://github.com/monachilada/craft-matrixtoolbar/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Pierce",
            "homepage": "https://michaelpierce.trade/"
        }
    ],
    "require": {
        "craftcms/cms": "^3.0.0-RC1",
        "ext-json": "^1.5"
    },
    "autoload": {
        "psr-4": {
          "monachilada\\matrixtoolbar\\": "src/"
        }
    },
    "extra": {
        "name": "Matrix Toolbar",
        "handle": "matrixtoolbar",
        "hasCpSettings": false,
        "hasCpSection": false,
        "changelogUrl": "https://raw.githubusercontent.com/monachilada/craft-matrixtoolbar/master/CHANGELOG.md",
        "class": "monachilada\\matrixtoolbar\\MatrixToolbar"
    }
}
